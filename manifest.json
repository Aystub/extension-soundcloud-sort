{
  "manifest_version": 2,

  "name": "Sound Cloud Sort",
  "description": "Add favorites to GitHub",
  "version": "1.0.2",
  "icons": {
    "19": "images/icon19.png",
    "96": "images/icon96.png",
    "128": "images/icon128.png",
    "256": "images/icon256.png"
  },
  "browser_action": {
    "default_icon": "images/icon96.png"
  },
  "permissions": [
    "activeTab",
    "*://*.soundcloud.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.soundcloud.com/*"],
      "css": ["chevron.css"],
      "js": ["sortNew.js"],
      "run_at": "document_end"
    }
  ]
}
